{
  "name": "twinpictures/wp-psych-search",
  "description": "WordPress plugin for a searchable directory of psychotherapists with advanced geolocation",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0",
    "opencage/geocode": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "WPPsychSearch\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPPsychSearch\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress"
  }
}
